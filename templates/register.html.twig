{% extends "layout.html.twig" %}

{% block title %}Role Registry{% endblock %}

{% block content %}
{{ parent() }}

<div class="row">
    <div class="col-md-4">
        <h2>Register</h2>
        
        <p>Register this computer as token dispenser, service point or display screen.</p>
        
        {% if msg is not empty %}
            <div class="alert alert-danger"><strong>Heads up!</strong>&nbsp;{{ msg }}</div>
        {% endif %}
        
        <form role="form" method="POST">
            <div class="form-group">
                <label for="queue" class="control-label">Register to</label>
                <select id="queue" name="queue" class="form-control">
                    {% for key, name in queues %}
                    <option name="{{ key }}" value="{{ name|e }}">{{ name|e }}&nbsp;queue</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="role" class="control-label">Register as</label>
                <select id="role" name="role" class="form-control">
                    <option value="/enqueue">Token dispenser</option>
                    <option value="/dequeue">Service point</option>
                    <option value="/display">Display screen</option>
                </select>
            </div>

            <div class="form-group">
                <label for="counter" class="control-label" data-toggle="tooltip" data-animation="true" title="Your location. Default is your IP address. E.g. Counter 1">Counter label</label>
                <input id="counter" name="counter" type="text" class="form-control">
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Submit">
            </div>
        </form>
    </div>
</div>
{% endblock %}